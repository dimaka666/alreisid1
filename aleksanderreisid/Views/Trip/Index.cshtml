@model IEnumerable<aleksanderreisid.Models.Trip>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper">

<div id="tripLabel">
    <h2>Календарь поездок</h2>
</div>


<div id="tripFilters">
    <div id="tripFiltersList">
      @using (Html.BeginForm())
        {
          <ul>
              <li>
                  Цена: @Html.DropDownList("sortOrder", new [] { new SelectListItem() {Text = "Цена:Меньшие впереди", Value = "price_asc"}, new SelectListItem() {Text = "Цена:Дорогие впереди", Value = "price_desc" }})
              </li>
              <li>
                  Дата: <input type="date" id="startDateFilter" name="startDateFilter"/>
              </li>
              <input type="submit" value="Filter" />
          </ul>       
        }
    </div>

</div>
    
   
