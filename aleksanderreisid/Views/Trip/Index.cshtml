<div id="tripBlockList">


@foreach (var item in Model) {
        <div class="tripContainer">
            <div class="tripWrapper">
                <div class="tripImg" id=""></div>
                <div class="tripInfo">
                    <div class="tripPrice"><p>@Html.DisplayFor(modelItem => item.Price) EUR</p></div>
                    <div class="tripDesc">
                        <ul class="tripInfoList">
                            <li>
                                Дата: @Html.DisplayFor(modelItem => item.StartDate) - @Html.DisplayFor(modelItem => item.EndDate)
                            </li>
                            <li>
                                Отправление:
                            </li>
                            <li>
                                Описание: @Html.DisplayFor(modelItem => item.Description)
                            </li>
                            <li>
