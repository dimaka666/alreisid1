@model IEnumerable<aleksanderreisid.Models.Document>

@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <section>
        <!-- begin .boxes -->
        <div class="boxes">
            <ul>
                @foreach (var item in Model)
                {
                    if (item.Place == 0)
                    {
                        <li class="shadowStyle">
                            <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                            <img src="images/boxPic1.jpg" alt="" class="boxPic shadowStyle">
                            <p>@Html.DisplayFor(modelItem => item.Content) </p>
                            <div class="button"><a href=""><img src="images/more.png" alt=""></a></div>
                        </li>
                    }
                }
            </ul>
            <br class="clearfloat" />
        </div>
        <!-- end .boxes -->
            @foreach (var item in Model)
            {
                if (item.Place == 1)
                {
                    <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
                    <p>@Html.DisplayFor(modelItem => item.Content) </p>
                }
            }

    </section>
    <!-- begin Right List -->
    <div class="rightList shadowStyle">
        @foreach (var item in Model)
            {
                if (item.Place == 2)
                {
                    <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                    <p>
                        <img src="images/pic.jpg" alt="" class="floatPic shadowStyle">
                        @Html.DisplayFor(modelItem => item.Content)
                    </p>
                }
            }
    </div>
